{
  "name": "ph-university-server",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "start": "node --env-file=.env build/index.js",
    "dev": "tsnd --respawn --transpile-only --env-file=.env --ignore-watch node_modules src/index.ts",
    "build": "tsc -p . --outDir build",
    "lint": "eslint src",
    "lint:fix": "npx eslint src --fix",
    "prettier": "prettier --ignore-path .gitignore --write \"./src/**/*.+(js|ts|json)\"",
    "prettier:fix": "npx prettier --write src",
    "start:day": "bun run lint && bun run prettier && bun update --latest && bun upgrade && bun dev"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.8.0",
    "morgan": "^1.10.0",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0"
  }
}