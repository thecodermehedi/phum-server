{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src/",
    "outDir": "./build/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
